@model DoctorFAM.Domain.ViewModels.Site.Reservation.ChooseTypeOfReservationViewModel

<form id="ChooseReservationType" method="post" asp-action="ChooseTypeOfReservation" asp-controller="FocalPoint" asp-area="">
    <input type="hidden" asp-for="ReservationDateTimeId" />
    <input type="hidden" asp-for="DoctorId" />
        <h5 class="modal-title" id="exampleModalLabel">انتخاب روش مراجعه </h5>

    <div class="modal-body">
        <div class="row">

            @if (Model.DoctorSelectedReservationType == DoctorFAM.Domain.Enums.DoctorReservation.DoctorReservationType.Reserved)
            {
                <div class="form-group col-md-12 col-sm-12">
                    <label asp-for="DoctorReservationType">نوع نوبت </label>
                    <select asp-for="DoctorReservationType" class="form-control" >

                        <option value="1">حضوری</option>

                    </select>
                    <span class="text-danger" asp-validation-for="DoctorReservationType"></span>
                </div>
            }

            @if (Model.DoctorSelectedReservationType == DoctorFAM.Domain.Enums.DoctorReservation.DoctorReservationType.Onile)
            {
                <div class="form-group col-md-12 col-sm-12">
                    <label asp-for="DoctorReservationType">نوع نوبت </label>
                    <select asp-for="DoctorReservationType" class="form-control">

                        <option value="0">آنلاین</option>

                    </select>
                    <span class="text-danger" asp-validation-for="DoctorReservationType"></span>
                </div>
            }

            @if (Model.DoctorSelectedReservationType == DoctorFAM.Domain.Enums.DoctorReservation.DoctorReservationType.BothOnlineAndReserved)
            {
                <div class="form-group col-md-12 col-sm-12">
                    <label asp-for="DoctorReservationType">نوع نوبت </label>
                    <select asp-for="DoctorReservationType" class="form-control">

                        <option value="0">آنلاین</option>
                        <option value="1">حضوری</option>

                    </select>
                    <span class="text-danger" asp-validation-for="DoctorReservationType"></span>
                </div>
            }

            <hr />

            <div class="form-group col-md-12 col-sm-12">
                <label asp-for="ReservationRequestDescription">توضیحات </label>
                <textarea asp-for="ReservationRequestDescription" class="form-control"></textarea>
                <span class="text-danger" asp-validation-for="ReservationRequestDescription"></span>
            </div>

            <hr />

            <div class="footer">
                <button type="submit" style="padding-top: 10px;padding-bottom: 10px;padding-right: 20px;padding-left: 20px;" class="btn-SelfTest">ثبت</button>
                <a asp-action="ListOfUserVirtualFiles" asp-area="UserPanel" asp-controller="UserVirtualFiles" style="padding-top: 10px;padding-bottom: 10px;padding-right: 20px;padding-left: 20px;" class="btn-SelfTest" >پرونده ی مجازی بیمار</a>
            </div>

        </div>
    </div>
</form>
