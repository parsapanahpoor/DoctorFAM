                                                    data-color-needle-start="red" data-color-needle-end="red" data-value-box="true"
                                                    data-animation-rule="bounce" data-animation-duration="500" data-border-outer-width="0"
                                                    data-border-middle-width="0" data-border-inner-width="0"></canvas>
                                        </div>
                                        <div>
                                        </div>
                                        <button onclick="ShowBMIModal()" type="button" class="btn-SelfTest text-center justify-content-center" data-toggle="modal" data-target="#exampleModal">
                                            <p class="text-center justify-content-center">BMI</p>
                                            <span>
                                                محاسبه شاخص توده بدنی
                                            </span>
                                        </button>
                                    </div>


                                    <div class="col-md-6  mt-5">

                                        <div class="row mt-3">
                                            <div class="col-md-2"></div>
                                            <div class="col-md-8 text-center">
                                                <div class=" text-center btn2 m-1" style="border:1px solid #fd5b03; border-radius:8px;">

                                                    <a asp-action="DiabetSelfTest" asp-area="" asp-controller="Diabet">

                                                        <p class=" text-center  m-3" style="color:white !important; font-size:20px; font-weight:700;">خودارزیابی دوره ای روان</p>
                                                    </a>
                                                </div>
                                            </div>
                                            <div class="col-md-2"></div>
                                            <div class="col-md-2"></div>
                                            <div class="col-md-8 text-center">
                                                <div class=" text-center btn2 m-1" style="border:1px solid #fd5b03; border-radius:8px;">
                                                    <a asp-action="SMBGNoteBookPage" asp-area="" asp-controller="Diabet">
                                                        <span class="spCol">   </span>
                                                        <p class=" text-center m-3 " style="color:white !important; font-size:20px; font-weight:700;">دفتر ثبت ؟؟؟</p>
                                                    </a>
                                                </div>

                                            </div>
                                            <div class="col-md-2"></div>
                                            <div class="col-md-2"></div>
                                            <div class="col-md-8 text-center">
                                                <div class=" text-center btn2 m-1" style="border:1px solid #fd5b03; border-radius:8px;">
                                                    <a asp-action="ASCVD" asp-area="" asp-controller="Diabet">
                                                        <span class="spCol">  ASCVD   </span>
                                                        <p class=" text-center m-3 " style="color:white !important; font-size:20px; font-weight:700;">محاسبه خطرسنجی قلبی عروقی</p>
                                                    </a>
                                                </div>
                                            </div>
                                            <div class="col-md-2"></div>
                                        </div>


                                    </div>


                                    <div class="col-xl-3  ">
                                        <div class="gauge">
                                            <canvas data-type="radial-gauge" data-width="280" data-height="280" data-units="GFR"
                                                    data-title="false" data-value="" data-animate-on-init="true" data-animated-value="true"
                                                    data-min-value="0" data-max-value="105" data-major-ticks="0,15,30,45,60,75,90,105"
                                                    data-minor-ticks="5" data-stroke-ticks="false" data-highlights='[
                        { "from": 0, "to": 15, "color": "rgba(255,0,0)" },
                        { "from": 15, "to": 30, "color": "rgba(255,90,0)" },
                        { "from": 30, "to": 45, "color": "rgba(255,150,0)" },
                        { "from": 45, "to": 60, "color": "rgba(255,170,0)" },
                        { "from": 60, "to": 75, "color": "rgba(255,215,0)" },
                        { "from": 75, "to": 90, "color": "rgba(255,255,0)" },
                        { "from": 90, "to": 105, "color": "rgba(0,255,0)" }

                    ]' data-color-plate="transparent" data-color-major-ticks="black" data-color-minor-ticks="0d0d0d"
                                                    data-color-title="#fff" data-color-units="#000" data-color-numbers="#000"
                                                    data-color-needle-start="red" data-color-needle-end="red" data-value-box="true"
                                                    data-animation-rule="bounce" data-animation-duration="500" data-border-outer-width="0"
                                                    data-border-middle-width="0" data-border-inner-width="0"></canvas>
                                        </div>


                                        <div>
                                        </div>
                                        <button onclick="ShowGFRModal()" type="button" class="btn-SelfTest text-center justify-content-center" data-toggle="modal" data-target="#exampleModal">
                                            <p class="text-center justify-content-center">GFR</p>
                                            <span>
                                                محاسبه عملکرد کلیه
                                            </span>

                                        </button>

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

