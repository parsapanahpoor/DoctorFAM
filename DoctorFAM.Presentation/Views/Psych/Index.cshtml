                                                    data-min-value="15" data-max-value="45" data-major-ticks="15,20,25,30,35,40,45"
                                                    data-minor-ticks="5" data-stroke-ticks="false" data-highlights='[



                         { "from": 15, "to": 20, "color": "rgba(0, 0, 255)" },
                        { "from": 20, "to": 25, "color": "rgba(0, 255, 0)" },
                        { "from": 25, "to": 30, "color": "rgba(255,255,0)" },
                        { "from": 30, "to": 35, "color": "rgba(255,165,0)" },
                        { "from": 35, "to": 40, "color": "rgba(255,0,0)" },
                        { "from": 40, "to": 45, "color": "rgba(111,8,36)" }


