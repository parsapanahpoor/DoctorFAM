                        <h4 class="title">معرفی </h4>

                    </div>
                    <div class="container">
                        <div class="row">
                            <div class="col-md-4">
                                <div class="select-box aos m-3" data-aos="fade-up">
                                    <div class="d-flex align-items-center">
                                        <div class="image-holder">
                                            <span>
                                                <img src="~/Content/Doctor/assets/img/icons/consultant3.png" alt="" />
                                            </span>
                                        </div>
                                        <div>
                                            <h4 style="color:#fd5b03 !important;">مشاور روان</h4>
                                            <h2> دکترفم </h2>
                                            <div class="row">
                                                <div class="col-md-5"></div>
                                                <div class="col-md-7 text-center justify-content-center">
                                                    <a asp-action="ListOfDiabetConsultants" asp-controller="Diabet" asp-area="" class="book-now  hover-icon">مشاهده </a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>


                            <div class="col-md-4">
                                <div class="select-box theme aos m-3" data-aos="fade-up">
