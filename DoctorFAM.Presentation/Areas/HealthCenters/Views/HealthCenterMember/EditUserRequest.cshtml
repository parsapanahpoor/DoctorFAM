@using DoctorFAM.Domain.Enums
@using DoctorFAM.Application.StaticTools
@using DoctorFAM.Domain.ViewModels.Common
@model DoctorFAM.Domain.ViewModels.HealthCenters.HealthCenterMembers.EditMemberInfoDTO
@using DoctorFAM.Domain.ViewModels.Admin.Doctor

@{
    ViewData["Title"] = @Localizer["اطلاعات کارمند مرکز درمانی"];
}

@section Scripts
    {
    <partial name="_JqueryValidation" />
}

@section Breadcrumb
    {
    <li>
        <a asp-action="Index" asp-controller="Home" asp-area="HealthCenters"> @Localizer["داشبورد"] </a>
    </li>
    <li>
        <a href="javascript:void(0)"> @ViewData["Title"] </a>
    </li>
}

<form method="post" asp-action="EditUserRequest" asp-controller="HealthCenterMember" asp-area="HealthCenters" enctype="multipart/form-data">
    <div class="row">
        <div class="col-lg-12 col-sm-12">
            <div class="row">

                <input type="hidden" asp-for="Id" />

                <div class="col-lg-12">
                    <div class="widget">
                        <div class="widget-header bordered-bottom bordered-green">
                            <span class="widget-caption"> اطلاعات کاربر </span>
                        </div>
                        <div class="widget-body">
                            <div class="row">

                                <div class="form-group col-md-6 col-sm-12">
                                    <label asp-for="User.Username">نام کاربری</label>
                                    <input type="text" class="form-control" asp-for="User.Username">
                                    <span class="text-danger" asp-validation-for="User.Username"></span>
                                </div>

                                <div class="form-group col-md-6 col-sm-12">
                                    <label asp-for="User.Mobile">موبایل</label>
                                    <input type="text" class="form-control" asp-for="User.Mobile">
                                    <span class="text-danger" asp-validation-for="User.Mobile"></span>
                                </div>

                                <div class="form-group col-md-6 col-sm-12">
                                    <label asp-for="User.NationalId">کدملی</label>
                                    <input type="text" class="form-control" asp-for="User.NationalId">
                                    <span class="text-danger" asp-validation-for="User.NationalId"></span>
                                </div>

                                <div class="form-group col-md-6 col-sm-12">
                                    <label asp-for="User.Email">ایمیل</label>
                                    <input type="text" class="form-control" asp-for="User.Email">
                                    <span class="text-danger" asp-validation-for="User.Email"></span>
                                </div>

                                <div class="form-group col-md-12 col-sm-12">
                                    <label>وضعیت همکاری</label>
                                    <select asp-for="DoctorSelectedHealthCenterState" class="form-control" asp-items="Html.GetEnumSelectList(typeof(DoctorFAM.Domain.Enums.HealthCenter.DoctorSelectedHealthCenterState))"></select>
                                    <span class="text-danger" asp-validation-for="DoctorSelectedHealthCenterState"></span>
                                </div>

                                <hr class="margin-bottom-10 margin-top-10" />

                                <div class="col-md-12 flex-style">
                                    <button type="submit" class="btn btn-labeled btn-palegreen">
                                        <i class="btn-label glyphicon glyphicon-ok"></i>@Localizer["ثبت"]
                                    </button>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>

    </div>

</form>
