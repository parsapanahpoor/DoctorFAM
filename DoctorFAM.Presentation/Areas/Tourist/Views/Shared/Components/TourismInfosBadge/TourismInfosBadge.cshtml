
@model string

@if (Model == "NewUser")
{
    <li>
        <a asp-area="Tourism" asp-controller="TourismInfo" asp-action="PageOfManageTourismInfo">
            <i class="menu-icon glyphicon glyphicon-education"></i>
            <span class="menu-text">@SharedLocalizer["Tourism Info"]</span>
            <div class="badge badge-warning" id="DoctorInfoState">
                @SharedLocalizer["Waiting"]
            </div>
        </a>
    </li>
}

