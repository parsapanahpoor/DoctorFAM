@model DoctorFAM.Domain.ViewModels.DoctorPanel.DoctorBankAccounts.DetailDoctorAccountInfoDTOs

@{
    ViewData["Title"] = @Localizer["بررسی حساب بانکی "];
}

@section Scripts
    {
    <partial name="_JqueryValidation" />
}

@section Breadcrumb
    {
    <li>
        <a asp-action="ListOfUserBanksAccounts" asp-controller="BankAccount" asp-area="Doctor"> مدیریت اطلاعات بانکی </a>
    </li>
}

<div class="row">
    <div class="col-lg-12 col-sm-12">

        <div class="widget">
            <div class="widget-header bordered-bottom bordered-green">
                <span class="widget-caption"> @Localizer["بررسی حساب بانکی "] </span>
            </div>
            <div class="widget-body">
                <div>

                        <div class="modal-body">
                            <div class="row">

                                <div class="form-group col-md-6 col-sm-12">
                                    <label asp-for="ShomareShaba">@Localizer["شماره شبا"]</label>
                                    <input type="text" class="form-control" value="@Model.ShomareShaba" readonly>
                                </div>

                                <div class="form-group col-md-6 col-sm-12">
                                    <label asp-for="ShomareCart">@Localizer["شماره کارت"]</label>
                                <input type="text" class="form-control" value="@Model.ShomareCart" readonly>
                            </div>

                                <div class="form-group col-md-6 col-sm-12">
                                    <label asp-for="BankName">@Localizer["نام بانک"]</label>
                                <input type="text" class="form-control" value="@Model.BankName" readonly>
                            </div>

                                <div class="form-group col-md-6 col-sm-12">
                                    <label asp-for="OwnerAccountUsername">@Localizer["نام صاحب حساب"]</label>
                                <input type="text" class="form-control" value="@Model.OwnerAccountUsername" readonly>
                            </div>

                                <hr class="margin-bottom-10 margin-top-10" />

                                <div class="form-group col-md-6 col-sm-12">
                                    <label asp-for="BankBranchCode">@Localizer["کد شعبه"]</label>
                                <input type="text" class="form-control" value="@Model.BankBranchCode" readonly>
                            </div>

                                <div class="form-group col-md-6 col-sm-12">
                                    <label asp-for="BankBranchName">@Localizer["نام شعبه ی بانکی"]</label>
                                <input type="text" class="form-control" value="@Model.BankBranchName" readonly>
                            </div>

                                <div class="form-group col-md-12">
                                <a asp-action="ListOfUserBanksAccounts" asp-controller="BankAccount" asp-area="Doctor" class="btn btn-success">
                                        @SharedLocalizer["بازگشت"]
                                    </a>
                                </div>

                            </div>
                        </div>


                </div>
            </div>
        </div>
    </div>
</div>
