@model DoctorFAM.Domain.ViewModels.DoctorPanel.Appointment.DoctorPersonalBookingViewModel

@{
    ViewData["Title"] = @Localizer["Doctor Booking"];
}

@section Scripts
    {
    <partial name="_JqueryValidation" />
}

@section Breadcrumb
    {
    <li>
        <a href="javascript:void(0)"> @ViewData["Title"] </a>
    </li>
}

<form method="post" asp-action="AddPersonalPatientForDoctorBooking" asp-controller="Appointment" asp-area="Doctor">
    <input type="hidden" asp-for="DoctorReservationDateTimeId" />

    <div class="row">
        <div class="col-lg-12 col-sm-12">
            <div class="widget">
                <div class="widget-header bordered-bottom bordered-green">

                    <span class="widget-caption"> @Localizer["Add Patient For Doctor Booking"]  </span>

                </div>
                <div class="widget-body">
                    <div>

                        <div class="row">
                            <div class="form-group col-md-6 col-sm-12">
                                <label asp-for="FirstName">@Localizer["FirstName"]</label>
                                <span style="color:red;">*</span>
                                <input type="text" class="form-control" asp-for="FirstName">
                                <span class="text-danger" asp-validation-for="FirstName"></span>
                            </div>

                            <div class="form-group col-md-6 col-sm-12">
                                <label asp-for="LastName">@Localizer["LastName"]</label>
                                <span style="color:red;">*</span>
                                <input type="text" class="form-control" asp-for="LastName">
                                <span class="text-danger" asp-validation-for="LastName"></span>
                            </div>

                            <hr class="margin-bottom-10 margin-top-10" />

                            <div class="form-group col-md-6 col-sm-12">
                                <label asp-for="Mobile">@Localizer["Mobile"]</label>
                                <span style="color:red;">*</span>
                                <input type="text" class="form-control" asp-for="Mobile">
                                <span class="text-danger" asp-validation-for="Mobile"></span>
                            </div>

                            <div class="form-group col-md-6 col-sm-12">
                                <label asp-for="NationalId">@Localizer["NationalId"]</label>
                                <span style="color:red; font-size:12px;">(اختیاری)</span>
                                <input type="text" class="form-control" asp-for="NationalId">
                                <span class="text-danger" asp-validation-for="NationalId"></span>
                            </div>

                            <div class="form-group col-md-12 col-sm-12">
                                <label asp-for="UserRequetsDescription">توضیحات</label>
                                <span style="color:red; font-size:12px;">(اختیاری)</span>
                                <textarea type="text" class="form-control" asp-for="UserRequetsDescription"></textarea>
                                <span class="text-danger" asp-validation-for="UserRequetsDescription"></span>
                            </div>
                        </div>

                        <hr class="margin-bottom-10 margin-top-10" />

                        <div class="row">
                            <div class="col-md-12 flex-style">
                                <button type="submit" class="btn btn-labeled btn-palegreen">
                                    <i class="btn-label glyphicon glyphicon-ok"></i>@Localizer["Submit"]
                                </button>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>

    </div>
</form>


