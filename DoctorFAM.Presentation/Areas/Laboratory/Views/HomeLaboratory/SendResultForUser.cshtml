@model DoctorFAM.Domain.ViewModels.Laboratory.HomeLaboratory.HomeLaboratoryRequestResultLaboratorySideViewModel

@using DoctorFAM.Domain.Enums
@using DoctorFAM.Application.StaticTools
@using DoctorFAM.Domain.ViewModels.Common

@{
    ViewData["Title"] = "نتیجه ی آزمایش";
}

@section Scripts
    {
    <partial name="_JqueryValidation" />
}

@section Breadcrumb
    {
    <li>
        <a href="javascript:void(0)"> @ViewData["Title"] </a>
    </li>
}

@if (!Model.Finalize)
{

    <form method="post" asp-action="SendResultForUser" asp-controller="HomeLaboratory" asp-area="Laboratory" enctype="multipart/form-data">
        <input type="hidden" asp-for="RequestId" />

        <div class="row">
            <div class="col-lg-12 col-sm-12">
                <div class="row">

                    <div class="col-lg-6 col-sm-12">
                        <div class="row">


                            <div class="col-lg-12">
                                <div class="widget">
                                    <div class="widget-header bordered-bottom bordered-green" style="background-color:#d1f4fa">
                                        <span class="widget-caption"> اطلاعات  </span>
                                    </div>



                                    <div class="widget-body" style="background-color:#d1f4fa !important;">
                                        <div class="row">

                                            <div class="form-group col-md-12 col-sm-12">
                                                <div class="checkbox">
                                                    <label>
                                                        <input type="checkbox" asp-for="ResultInDoctorFAMPanel">
                                                        <span class="text"> دریافت نتیجه به وسیله ی درج در سامانه  </span>
                                                    </label>
                                                </div>
                                            </div>

                                            <div class="form-group col-md-12 col-sm-12">
                                                <div class="checkbox">
                                                    <label>
                                                        <input type="checkbox" asp-for="ResultInVisitInPerson">
                                                        <span class="text"> دریافت نتیجه به وسیله ی مراجعه ی حضوری متقضی  </span>
                                                    </label>
                                                </div>
                                            </div>

                                            <div class="form-group col-md-12 col-sm-12">
                                                <div class="checkbox">
                                                    <label>
                                                        <input type="checkbox" asp-for="ResultInSocialMedia">
                                                        <span class="text"> دریافت نتیجه از طریق شبکه های اجتماعی  </span>
                                                    </label>
                                                </div>
                                            </div>

                                            <div class="col-md-12 flex-style">
                                                <button type="submit" class="btn btn-labeled btn-palegreen">
                                                    <i class="btn-label glyphicon glyphicon-ok"></i>ثبت
                                                </button>
                                            </div>

                                        </div>
                                    </div>

                                </div>
                            </div>

                        </div>
                    </div>

                    <div class="col-lg-6">
                        <div class="widget">
                            <div class="widget-header bordered-bottom bordered-green">
                                <span class="widget-caption"> فایل ضمیمه </span>
                            </div>
                            <div class="widget-body">
                                <div class="row">

                                    <input type="hidden" asp-for="AttachmentFileName">

                                    <div class="col-md-12">
                                        <label for="courseAttachmentFile" class="file-input-style">
                                            <i class="glyphicon glyphicon-upload"></i>
                                            <span class="mr-8px">لطفا فایل ضمیمه را انتخاب کنید .</span>
                                        </label>
                                    </div>

                                    <div class="col-md-12 mt-10px display-none" id="CourseAttachment" inputId="AttachmentFileName" upload-url="@Url.Action("UploadCourseAttachmentFile", "HomeLaboratory", new {area = "Laboratory"})">
                                        <div class="progress progress-bordered" style="margin-bottom: 10px !important">
                                            <div class="progress-bar progress-bar-blue" role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100">
                                                <span class="percent"></span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>


                </div>
            </div>
        </div>
    </form>

    <input type="file" chunk-upload="CourseAttachment" class="display-none" name="courseAttachmentFile" id="courseAttachmentFile" />

}
else
{
    <div class="col-lg-12 col-sm-12">
        <div class="row">

            <div class="col-lg-6 col-sm-12">
                <div class="row">


                    <div class="col-lg-12 col-sm-12">
                        <div class="widget">
                            <div class="widget-header bordered-bottom bordered-green" style="background-color:#d1f4fa">
                                <span class="widget-caption"> اطلاعات  </span>
                            </div>



                            <div class="widget-body" style="background-color:#d1f4fa !important;">
                                <div class="row">

                                    <div class="form-group col-md-12 col-sm-12">
                                        <div class="checkbox">
                                            <label>
                                                <input type="checkbox" asp-for="ResultInDoctorFAMPanel">
                                                <span class="text"> دریافت نتیجه به وسیله ی درج در سامانه  </span>
                                            </label>
                                        </div>
                                    </div>

                                    <div class="form-group col-md-12 col-sm-12">
                                        <div class="checkbox">
                                            <label>
                                                <input type="checkbox" asp-for="ResultInVisitInPerson">
                                                <span class="text"> دریافت نتیجه به وسیله ی مراجعه ی حضوری متقضی  </span>
                                            </label>
                                        </div>
                                    </div>

                                    <div class="form-group col-md-12 col-sm-12">
                                        <div class="checkbox">
                                            <label>
                                                <input type="checkbox" asp-for="ResultInSocialMedia">
                                                <span class="text"> دریافت نتیجه از طریق شبکه های اجتماعی  </span>
                                            </label>
                                        </div>
                                    </div>

                                </div>
                            </div>

                        </div>
                    </div>

                </div>
            </div>

            @if (!string.IsNullOrEmpty(Model.AttachmentFileName))
            {
                <div class="col-lg-6 col-sm-12">
                    <div class="widget">
                        <div class="widget-header bordered-bottom bordered-green">
                            <span class="widget-caption"> فایل ضمیمه نتیجه ی آزمایش </span>
                        </div>
                        <div class="widget-body">
                            <div class="row">

                                <div class="col-md-12 mt-10px @((Model != null && !string.IsNullOrEmpty(Model.AttachmentFileName)) ? "" : "display-none")" style="margin-bottom: 5px" id="CourseAttachmentDownloadBox">
                                        <a asp-action="DownloadAttachmentFile" asp-controller="HomeLaboratory" asp-area="Laboratory" asp-route-fileName="@((Model != null && !string.IsNullOrEmpty(Model.AttachmentFileName)) ? Model.AttachmentFileName : string.Empty)" class="btn btn-primary">
                                           دانلود نتیجه
                                        </a>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
}


