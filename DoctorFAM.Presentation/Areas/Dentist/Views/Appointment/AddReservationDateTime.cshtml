@model DoctorFAM.Domain.ViewModels.DoctorPanel.Appointment.AddReservationDateTimeViewModel

@{
    ViewData["Title"] = @Localizer["افزودن زمان شیفت"];
}

@section Scripts
    {
    <partial name="_JqueryValidation" />
}

@section Breadcrumb
    {
    <li>
        <a asp-action="TurnRating" asp-controller="Home" asp-area="Doctor"> نوبت دهی </a>
    </li>
}

<div class="row">
    <div class="col-lg-12 col-sm-12">

        <div class="widget">
            <div class="widget-header bordered-bottom bordered-green">
                <span class="widget-caption"> @Localizer["افزودن زمان"] </span>
            </div>
            <div class="widget-body">
                <div>

                    <form asp-action="AddReservationDateTime" asp-controller="Appointment" asp-area="Dentist" method="post">
                        <input type="hidden" asp-for="ReservationDateId" />
                        <div class="modal-body">
                            <div class="row">

                                <div class="form-group col-md-6 col-sm-12">
                                    <label asp-for="StartTime"></label>
                                    <input type="text" class="form-control" TimePicker="1" asp-for="StartTime">
                                    <span class="text-danger" asp-validation-for="StartTime"></span>
                                </div>

                                <div class="form-group col-md-6 col-sm-12">
                                    <label asp-for="EndTime"></label>
                                    <input type="text" class="form-control" TimePicker="2" asp-for="EndTime">
                                    <span class="text-danger" asp-validation-for="EndTime"></span>
                                </div>

                                <div class="form-group col-md-12">
                                    <button type="submit" class="btn btn-success">@SharedLocalizer["ثبت"]</button>
                                </div>

                            </div>
                        </div>

                    </form>

                </div>
            </div>
        </div>
    </div>
</div>
