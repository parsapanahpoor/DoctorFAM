@model List<DoctorFAM.Domain.ViewModels.DoctorPanel.Resume.EducationResumeInDoctorPanelViewModel>
@using DoctorFAM.Application.Extensions
@using DoctorFAM.Application.Convertors
@using DoctorFAM.Application.Utils

<div class="form-title">
    بخش تحصیلات

    <a asp-action="CreateEducation" asp-area="Consultant" asp-controller="Resume" style="margin-right: 10px;" class="btn btn-success mr-4">افزودن اطلاعات</a>
</div>

@if (Model != null && Model.Any())
{
    foreach (var education in Model)
    {
        <ul class="timeline animated fadeInDown">

            <li>
                @*<div class="timeline-datetime">
                    <a asp-action="EditEducationResume" asp-area="Consultant" asp-controller="Resume" asp-route-id="@education.Id" style="margin-right: 10px;" class="btn btn-primary mr-4">ویرایش</a>
                    <a asp-action="DeleteEducation" asp-area="Consultant" asp-controller="Resume" asp-route-id="@education.Id" style="margin-right: 10px;" class="btn btn-danger mr-4">حذف</a>
                    </div>*@
                <div class="timeline-badge blue">
                    <i class="fa fa-graduation-cap"></i>
                    <a asp-action="EditEducationResume" asp-area="Consultant" asp-controller="Resume" asp-route-id="@education.Id" class="tmlnbutton "><i class="fa fa-edit warning"></i></a>                           
                    <a asp-action="DeleteEducation" asp-area="Consultant" asp-controller="Resume" asp-route-id="@education.Id" class="tmlnbuttondelete "><i class="fa fa-trash-o danger"></i></a>

                </div>
                <div class="timeline-panel">
                    <div class="timeline-header bordered-bottom bordered-blue">
                        @if (education.UnivercityName != null)
                        {
                            <span class="timeline-title">
                                @education.UnivercityName
                            </span>
                        }
                    </div>
                    <div class="timeline-body">
                        <div class="row mt-2 ">
                            
                            <div class="col-md-12  ">
                                <p>رشته ی تحصیلی : @((string.IsNullOrEmpty(education.FieldOfStudy)) ? "وارد نشده" : education.FieldOfStudy)</p>
                            </div>
                            <div class="col-md-12  ">
                                <p>گرایش : @((string.IsNullOrEmpty(education.Orientation)) ? "وارد نشده" : education.Orientation)</p>
                            </div>
                            <div class="col-md-12  ">
                                <p>شهر محل تحصیل : @((string.IsNullOrEmpty(education.CityName)) ? "وارد نشده" : education.CityName)</p>
                            </div>
                            <div class="col-md-12  ">
                                <p>کشور محل تحصیل : @((string.IsNullOrEmpty(education.CountryName)) ? "وارد نشده" : education.CountryName)</p>
                            </div>
                        </div>


                        @*<div class="row mt-2 ">
                            <div class="col-md-12 ">
                                <a asp-action="EditEducationResume" asp-area="Consultant" asp-controller="Resume" asp-route-id="@education.Id" class="tmlnbutton2 "><i class="fa fa-edit warning"></i></a>
                           
                                <a asp-action="DeleteEducation" asp-area="Consultant" asp-controller="Resume" asp-route-id="@education.Id" class="tmlnbuttondelete2 "><i class="fa fa-trash-o danger"></i></a>
                            </div>
                        </div>*@
                    </div>
                </div>

            </li>
        </ul>
    }
}

else
{
    <div class="alert alert-info fade in">
        @SharedLocalizer["Not Found"]
    </div>
}